    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch MVC",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_mvc",
            "program": "${workspaceFolder}/mvc_test/bin/Debug/netcoreapp3.1/MvcMovie.dll",
            "args": [],
            "cwd": "${workspaceFolder}/mvc_test/",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/MvcMovie/Views"
            }
        }
    ]
}